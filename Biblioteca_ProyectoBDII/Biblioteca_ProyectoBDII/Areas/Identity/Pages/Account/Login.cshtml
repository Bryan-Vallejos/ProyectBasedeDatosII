@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="row justify-content-center">
    <div class="col-md-4">
    <div class="card">
        <section>
            <form id="account" method="post">
                <div class="card-header text-center"><h2>@ViewData["Title"]</h2></div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div >
                        <input asp-for="Input.UserName" class="form-control mb-3" placeholder="Usuario" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>

                        <input asp-for="Input.Password" class="form-control mb-3" placeholder="Contraseña" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="text-center">
                        <button id="login-submit" type="submit" class="w-100 btn btn-primary">Iniciar Sesión</button>

                    </div>
                    <div class ="text-center">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Olvidastes tu contraseña?</a>
                        </p>
                        <p>
                                ¿No tienes una cuenta?<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrate!</a>
                        </p>
                    </div>
                </div>
            </form>
        </section>
    </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
