@page
@using Biblioteca_ProyectoBDII.Models.ViewModels
@model RegisterModel
@{
    ViewData["Title"] = "Registrarse";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="card-header text-center">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Input.UserName" class="form-control mb-3" placeholder="Nombre de Usuario" aria-required="true" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>

                    <input asp-for="Input.Email" class="form-control mb-3" placeholder="Correo" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>

                    <input asp-for="Input.Password" class="form-control mb-3" placeholder="Contraseña" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>

                    <input asp-for="Input.ConfirmPassword" class="form-control mb-3" placeholder="Confirmar Contraseña" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                    
                    <button id="ReModelSubmit" type="submit" class="w-100 btn btn-primary">Registrar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
