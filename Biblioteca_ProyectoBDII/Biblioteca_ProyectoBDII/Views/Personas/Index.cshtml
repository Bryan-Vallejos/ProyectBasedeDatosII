@model IEnumerable<Biblioteca_ProyectoBDII.Models.Persona>

@{
    ViewData["Title"] = "Lista de Personas";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-primary">
        <h4 class="m-0 font-weight-bold text-white">@ViewData["Title"]</h4>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-sm-12">
                <a asp-action="Create" class="btn btn-success ">Crear</a>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
            <div class="table-responsive">
                <table class="table table-bordered" style="width:100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombres)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Apellidos)
                            </th>
                @*            <th>
                                @Html.DisplayNameFor(model => model.Correo)
                            </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.Codigo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Estado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaCreacion)
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.IdNavigation)
                            </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.IdTipoPersonaNavigation)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombres)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Apellidos)
                                </td>
                     @*           <td>
                                    @Html.DisplayFor(modelItem => item.Correo)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Codigo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Estado)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaCreacion)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.IdNavigation.Id)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdTipoPersonaNavigation.IdTipoPersona)
                                </td>
                                <td>
                                        <a asp-action="Edit" asp-route-id="@item.IdPersona" class="btn btn-success ">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.IdPersona" class="btn btn-primary ">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.IdPersona" class="btn btn-danger ">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            </div>
        </div>
    </div>
</div>