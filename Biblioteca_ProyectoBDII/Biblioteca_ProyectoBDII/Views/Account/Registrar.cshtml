@model Biblioteca_ProyectoBDII.Models.ViewModel.PersonaUsuarioViewModel;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

</head>
<body>

    <div class="container mt-5 pt-5">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">
                <div class="card">
                    <div class="card-header">
                        Registrarse
                    </div>
                    <div class="card-body">
                        <form asp-controller="Account" asp-action="Registrar" method="post">
                            <input class="form-control mb-3" type="text" placeholder="Usuario" asp-for="usuario.Usuario" required />
                            <input class="form-control mb-3" type="password" placeholder="Contraseña" asp-for="usuario.Contraseña" required />
                            <div>
                                <button class="btn btn-primary" type="submit">Registrarse</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
